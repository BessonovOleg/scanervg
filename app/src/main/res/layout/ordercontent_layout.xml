<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/orderContenRowImage"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/ent" />
    <TextView
        android:id="@+id/entNameOrderContent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:maxLines="5"
        android:textSize="12sp"
        android:layout_weight="5"
        android:textColor="@android:color/black"/>


    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="4"
    android:weightSum="10"
    android:layout_gravity="right">

        <TextView
            android:id="@+id/unitOrderContent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/qtyOrderContent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="10sp"
            android:textColor="@android:color/black"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/priceOrderContent"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textAlignment="viewEnd"
            android:textSize="10sp"
            android:textColor="@android:color/black"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/sumOrderContent"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:textAlignment="viewEnd"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>